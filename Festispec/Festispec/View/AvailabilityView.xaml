<Window x:Class="Festispec.View.AvailabilityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Festispec.View"
        mc:Ignorable="d"
        Title="AvailabilityView" Height="450" Width="1000">

    <Grid DataContext="{Binding Availability, Source={StaticResource Locator}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
           
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Column="1" Grid.Row="1" Width="500" Height="300"  >
            <Calendar SelectedDate="{Binding SelectedDate}">
                
            </Calendar>
        </Viewbox>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBox Text="{Binding SelectedDate}" />
            <Button Command="{Binding AddAvailabilityCommand}" Width="100" Height="35" Content="Voeg toe"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <DataGrid ItemsSource="{Binding Availabilities}"/>
        </StackPanel>
    </Grid>

</Window>
