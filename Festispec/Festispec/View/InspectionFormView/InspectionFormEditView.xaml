        <local:QuestionDataTemplateSelector x:Key="QuestionTemplateSelector"/>
    
    </Page.Resources>

    


    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="Orange" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                
            </Grid.RowDefinitions>



            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Viewbox Grid.Column="0">
                    <Button Command="{Binding QuestionUpCommand}" Content="Up"/>
                </Viewbox>
                <Viewbox Grid.Column="2">
                    <Button Command="{Binding QuestionDownCommand}" Content="Down"/>
                </Viewbox>
                <Viewbox Grid.Column="4">
                    <Button Command="{Binding DeleteQuestionCommand}" Content="Delete"/>
                </Viewbox>
            </Grid>
            <Label Content="Element invoegen" Grid.Row="3" HorizontalAlignment="Center"/>
            <Button Grid.Row="4" Content="Tekst toevoegen" Command="{Binding AddTextCommand}"/>
            <Button Grid.Row="5" Content="Open vraag" Command="{Binding AddOpenQuestionCommand}"/>
            <Button Grid.Row="6" Content="Foto vraag" Command="{Binding AddPictureQuestionCommand}"/>
            <Button Grid.Row="7" Content="Schaal vraag" Command="{Binding AddScaleQuestionCommand}"/>
            <Button Grid.Row="8" Content="Multiple choice" Command="{Binding AddMultipleChoiceQuestionCommand}"/>
            <Button Grid.Row="9" Content="Table X 2" Command="{Binding AddTable2QuestionCommand}"/>
            <Button Grid.Row="10" Content="Table X 3" Command="{Binding AddTable3QuestionCommand}"/>
            
            <Button Content="Opslaan" Command="{Binding SaveCommand}" Grid.Row="12"/>

        </Grid>

        
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                
                <Border BorderBrush="Black" BorderThickness="1">
                    <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.15*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2.5*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Terug naar Opdracht" Grid.Column="1"/>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBox Text="{Binding Path=Titel}" Grid.Row="0" FontSize="30"/>
                        <TextBox Text="{Binding Path=Description}" Grid.Row="1" FontSize="10"/>
                    </Grid>
                    
                    <Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="Laatste weiziging:" VerticalAlignment="Center" Grid.Row="0" FontSize="15"/>
                        <Label Content="{Binding LastChangeDate}" Grid.Row="1" VerticalAlignment="Center" ContentStringFormat="d" FontSize="15"/>
                    </Grid>
                    
                    <Image Name="Logo" Grid.Column="4"/>
                    


                </Grid>
                </Border>

            <ListBox x:Name="QuestionList" Grid.Row="1" ItemsSource="{Binding Questions}" SelectedItem="{Binding SelectedQuestion}"  ItemTemplateSelector="{StaticResource QuestionTemplateSelector}" VerticalContentAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>


        </Grid>
        
    </Grid>
</Page>
