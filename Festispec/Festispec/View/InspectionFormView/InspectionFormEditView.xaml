        <DataTemplate x:Key="Table3QuestionEdit">
            <Border BorderBrush="Black" BorderThickness="2">
                <Grid Background="Gray" Width="{Binding Path=ActualWidth, ElementName=QuestionList}" Margin="2" MaxHeight="250">
                    <Grid.ColumnDefinitions>
