        <Grid.RowDefinitions>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.1*"/>

        </Grid.RowDefinitions>
        <Grid x:Name="LayoutRoot" Background="White" Grid.Row="0">
            <m:Map CredentialsProvider="AjUhVNG2ZqZGCCTbumwOX2Z4c2bGI3LwaqaMUz7WiRgxGWtv8VuE9X7Va89MQ7SU" 
               Center="52.147540, 5.258791" ZoomLevel="7" Margin="0,0,0,-0.4">
                <m:Map.Children>
                    <m:MapItemsControl ItemsSource="{Binding PushpinList}" MouseEnter="MapItemsControl_MouseEnter">

                    </m:MapItemsControl>
                </m:Map.Children>
