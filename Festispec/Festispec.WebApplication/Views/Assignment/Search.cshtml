@model Festispec.WebApplication.Models.Opdracht

<link href="~/Content/Pages/assignment_search.css" rel="stylesheet" />

@{
    ViewBag.Title = "Search";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Opdrachten</h1>
        </div>
        <div class="col-md-6 text-right">
            <a href='@Url.Action("Dashboard", "Dashboard")'>
                <img id="logo" src="~/Content/Images/festispec_logo.png" />
            </a>
        </div>
    </div>
    <hr />
    <div class="row">
        <form>
            <div class="form-group col-md-12">
                <input id="zoekbalk" type="text" placeholder="Zoek opdracht..." class="form-control" />
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Sorteren op: Datum</h2>
        </div>
    </div>
    @*Start Assignment*@
    <div class="row assignment">
        <div class="col-md-3">
            <img src="~/Content/Images/Dashboard_planning.png" />
        </div>
        <div class="col-md-3">
            <h3><b>Klantnaam:</b> Pinkpop</h3>
        </div>
        <div class="col-md-3">
            <h3><b>Locatie:</b> Landgraaf</h3>
        </div>
        <div class="col-md-2">
            <h3><b>Datum:</b> Pinkpop</h3>
        </div>
        <div class="col-md-1">
            <button class="btn-info">Meer info</button>
        </div>
    </div>
    <hr />
    @*End Assignment*@
    <div class="row assignment">
        <div class="col-md-3">
            <img src="~/Content/Images/Dashboard_planning.png" />
        </div>
        <div class="col-md-3">
            <h3><b>Klantnaam:</b> Pinkpop</h3>
        </div>
        <div class="col-md-3">
            <h3><b>Locatie:</b> Landgraaf</h3>
        </div>
        <div class="col-md-2">
            <h3><b>Datum:</b> Pinkpop</h3>
        </div>
        <div class="col-md-1">
            <button class="btn-info">Meer info</button>
        </div>
    </div>
    <hr />
</div>

